<?xml version="1.0"?>
<block>
  <name>mac_controller</name>
  <key>ieee802_15_4_mac_controller</key>
  <category>[IEEE802.15.4]</category>
  <import>import ieee802_15_4</import>
  <make>ieee802_15_4.mac_controller($debug,$fcf,$seq_nr,$dst_pan,$ts_dur_ms,$slot_len,$beacon_enable,$schedule_method)</make>

  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>

    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Frame Control</name>
    <key>fcf</key>
    <value>0x8841</value>
    <type>hex</type>
  </param>
  <param>
    <name>Sequence Number</name>
    <key>seq_nr</key>
    <value>0</value>
    <type>hex</type>
  </param>
  <param>
    <name>Destination PAN</name>
    <key>dst_pan</key>
    <value>0x1aaa</value>
    <type>hex</type>
  </param>
  <param>
    <name>Beacon Enable</name>
    <key>beacon_enable</key>
    <value>True</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Schedule Method</name>
    <key>schedule_method</key>
    <value>False</value>
    <type>hex</type>
    <hide>#if str($beacon_enable()) == 'False' then 'all' else 'none'# </hide>
    <option>
      <name>Round Robin</name>
      <key>0</key>
    </option>
  </param>
    <param>
    <name>Timeslot Duration (ms)</name>
    <key>ts_dur_ms</key>
    <value>10</value>
    <type>int</type>
    <hide>#if str($beacon_enable()) == 'False' then 'all' else 'none'# </hide>
  </param>
    <param>
    <name>Slotframe Length</name>
    <key>slot_len</key>
    <value>20</value>
    <type>int</type>
    <hide>#if str($beacon_enable()) == 'False' then 'all' else 'none'# </hide>
  </param>
  <sink>
    <name>pdu in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>app in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>pdu out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>app out</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
